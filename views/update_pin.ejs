<!-- include header -->
<%- include('include/_header') %>

    <!-- Main site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
               <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i>All Pins</a>
               </div>
            </div>

            <div class="form-title text-center">
                <h2 class="text-dark">Update Pin</h2>
                <span class="text-light">Use the below form to update the pin</span>
            </div>


                        <!-- form -->
                        <form method="POST" id="update_pin">
                            <div class="new_pin">
                                <div class="form-group">
                                    <label for="title" class="text-light">Title</label>
                                    <input type="hidden" name="id" value="<%= pin._id %>">
                                    <input type="text" name="title" value="<%= pin.title %>" placeholder="nature">
                                </div>
                                <div class="form-group">
                                    <label for="description" class="text-light">Description</label>
                                    <input type="text" name="description" value="<%= pin.description %>" placeholder="nature">
                                </div>
                                <div class="form-group">
                                    <label for="destination" class="text-light">Destination</label>
                                    <input type="text" name="destination" value="<%= pin.destination %>" placeholder="destination">
                                </div>
                                <div class="form-group">
                                    <label for="pin_size" class="text-light">Pin Size</label>
                                    <div class="radio inline">
                                        <input type="radio" id="radio-1" name="pin_size" value="small" <%= pin.pin_size == 'small' ? 'checked' : '' %>>
                                        <label for="radio-1" class="text-light">Small</label>
                                    </div>
                                    <div class="radio inline">
                                        <input type="radio" id="radio-2" name="pin_size" value="medium" <%= pin.pin_size == 'medium' ? 'checked' : '' %>>
                                        <label for="radio-2" class="text-light">Medium</label>
                                    </div>
                                    <div class="radio inline">
                                        <input type="radio" id="radio-3" name="pin_size" value="large" <%= pin.pin_size == 'large' ? 'checked' : '' %>>
                                        <label for="radio-3" class="text-light">Large</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="image" class="text-light">Image-URL</label>
                                    <input type="url" name="image" value="<%= pin.image %>">
                                </div>
            
                                <div class="form-group">
                                    <button type="submit" class="btn text-dark update">Save</button>
                                </div>
                            </div>
                        </form>

        </div>
    </main>
    <!-- main site ending -->

<!-- include footer -->
<%- include('include/_footer') %>
